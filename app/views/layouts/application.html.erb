<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
       <div class="container-fluid">
        <a class="navbar-brand" href="/admin">LOGO</a>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto md-5">
            <% if admin_signed_in? %>
            <li class="nav-item ml-5">
                <%= link_to "商品一覧", admin_items_path, class:'btn btn-outline-secondary' %></li>
            <li class="nav-item ml-5">
                <%= link_to "会員一覧", admin_customers_path, class:'btn btn-outline-secondary' %></li>
            <li class="nav-item ml-5">
                <%= link_to "注文履歴一覧", admin_root_path, class:'btn btn-outline-secondary' %></li>
           <li class="nav-item ml-5">
                <%= link_to "ジャンル一覧", admin_genres_path, class:'btn btn-outline-secondary' %></li>
            <li class="nav-item ml-5">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:'btn btn-outline-secondary' %></li>
            <% elsif customer_signed_in? %>
            <li class="nav-item ml-5">
               <%= link_to "マイページ", customer_path(current_customer.id), class:'btn btn-outline-secondary text-dark' %></li>
            <li class="nav-item ml-5">
               <%= link_to "商品一覧", items_path,class:'btn btn-outline-secondary text-dark' %></li>
            <li class="nav-item ml-5">
               <%= link_to "カート", cart_items_path, class:'btn btn-outline-secondary text-dark' %></li>
            <li class="nav-item ml-5">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:'btn btn-outline-secondary text-dark' %></li>
            <% else %>
            <li class="nav-item ml-5">
              <%= link_to "About", about_path, class:'btn btn-outline-secondary text-dark' %></li>
            <li class="nav-item ml-5">
               <%= link_to "商品一覧", items_path,class:'btn btn-outline-secondary text-dark' %></li>
            <li class="nav-item ml-5">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark border border-dark rounded' %></li>
            <li class="nav-item ml-5">
              <%= link_to "ログイン", customer_session_path, class: 'nav-link text-dark border border-dark rounded' %></li>
            <% end %>
          </ul>
        </div>
       </div>
      </nav>

      </div>
    </header>
    <%= yield %>
  </body>
</html>
