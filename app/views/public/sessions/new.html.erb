<div class="container">
  <div class="row">
    <div class="col-8">
     <h4>ログイン</h4>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
     <h6>会員の方はこちらからログイン</h6>
    </div>
  </div>
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス, class: 'col-sm-2 col-form-label mb-2'  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-sm-4' %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: 'col-sm-2 col-form-label' %>
        <%= f.password_field :password, autocomplete: "password", class:'col-sm-4' %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary btn-sm col-auto .mr-auto' %>
      </div>
    <% end %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
    <h6>会員登録がお済みでない方</h6>
    <h7><%= link_to "こちら", new_customer_registration_path, class: '' %>から新規登録を行ってください</h7>
    </div>
  </div>
  </div>
</div>