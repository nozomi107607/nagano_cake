<div class="container">
  <div class="row">
    <h5>配送先登録/一覧</h5>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <table class="table table-borderless">
        <thead>
          <tr>
          <%= form_with model: @address do |f| %>
           <th>郵便番号(ハイフンなし)</th>
           <td><%= f.text_field :postal_code %></td>
          </tr>
          </thead>
        <tbody>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, class: 'col-12' %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col  align-self-end">
      　<%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
       <table class="table table-bordered">
        <thead class="thead-light">
          <tr>

            <th class="col-sm-2">郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @addresses.each do |address| %>
            <th scope="row"><%= address.postal_code %></th>
            <th><%= address.address %></th>
            <th><%= address.name %></th>
            <th class="text-center"><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
            <%= link_to "削除する", destroy_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
            </th>
          </tr>
        </tbody>
       </table>
            <% end %>
    </div>
  </div>
</div>