<div class="container">
    <div class="row">
      <h2>商品一覧</h2>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-md-4">
                  <div class="card-deck">
                    <div class="card mb-4 border-light">
                      <div class="card-image-top text-center">
                        <%= link_to item_path(item.id) do %>
                        <%= image_tag item.image, size: "200x200" %>
                        <% end %>
                      </div>
                      <div class="card-title text-center">
                        <%= link_to item.name, "/items/#{item.id}", class: 'text-dark' %>
                      </div>
                      <div class="card-image-body text-center">
                        ¥<%= item.price %>
                      </div>
                    </div>
                  </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>


