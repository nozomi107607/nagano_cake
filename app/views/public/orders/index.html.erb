<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-hover table-inverse table-borderless">
         <thead class="thead-light">
           <tr>
             <th>注文日</th>
             <th>配送先</th>
             <th>注文商品</th>
             <th>支払金額</th>
             <th>注文詳細</th>
           </tr>
         </thead>
         <% @orders.each do |order| %>
         <tbody>
             <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
             <td><%= order.postal_code %>
                 <%= order.address %></td>
             <td><% order.order_details.each do |order_item| %>
                   <%= order_item.item.name %>
                 <% end %>
             </td>
             <td><%= order.total_payment %></td>
             <td><%= link_to "表示する", "orders/#{order.id}", class: 'btn btn-success btn-sm' %></td>
         </tbody>
         <% end %>
      </table>
    </div>
  </div>
</div>