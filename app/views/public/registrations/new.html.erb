<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 well well-sm text-center">新規会員登録</div>
  </div>
  <div class="row justify-content-md-center">
   <div class="col-sm-8 d-flex flex-column bd-highlight mb-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        名前
        姓
        <%= f.text_field :last_name%>
        名
        <%= f.text_field :first_name %>

    <div class="col mt-2">
       セイ
       <%= f.text_field :last_name_kana %>
       メイ
       <%= f.text_field :first_name_kana %>
    </div>
    <div class="col mt-2">
       メールアドレス
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="col mt-2">
       郵便番号
       <%= f.text_field :postal_code %>
    </div>
    <div class="col mt-2">
       住所
       <%= f.text_field :address %>
    </div>
    <div class="col mt-2 md-3">
       電話番号
       <%= f.telephone_field :telephone_number %>
    </div>
    <div class="col mt-2">
       パスワード
       <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="col mt-2">
       パスワード
       <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="col">
          <%= f.submit'新規登録', class: 'btn btn-success btn-sm' %>
       <% end %>
    </div>
     </div>
    </div>
   </div>
   </div>

   <div class="col-8">
    <h6>既に登録済みの方</h6>
    <%= render "public/shared/links" %>
   </div>
  </div>
</div>
