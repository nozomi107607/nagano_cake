<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">会員情報編集</div>
  </div>
  <div class="row justify-content-md-center">
   <div class="col-sm-8">
    <%= form_with model: @customer, url: update_customer_path(@customer.id),method: :patch do |f| %>
    <table class="table table-borderless table-sm">
     <thead>
       <tr>

        <th>名前</th>
        <th><%= f.text_field :last_name %></th>
        <th><%= f.text_field :first_name %></th>
       </tr>
     </thead>
     <tbody>
       <tr>
         <th></th>
         <th><%= f.text_field :last_name_kana %></th>
         <th><%= f.text_field :first_name_kana %></th>
       </tr>
       <tr>
         <th>郵便番号</th>
         <th><%= f.text_field :postal_code %></th>
       </tr>
       <tr>
         <th>住所</th>
         <th><%= f.text_field :address %></th>
       </tr>
       <tr>
         <th>電話番号</th>
         <th><%= f.telephone_field :telephone_number %></th>
       </tr>
       <tr>
         <th>メールアドレス</th>
         <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
       </tr>
     </tbody>
    </table>
    <div class="row">
     <div class="col-md-4">
              <%= f.submit "編集内容を保存", class: 'btn btn-success btn-sm' %>
    <% end %>
     </div>
    </div>
  </div>

   <div class="col-md-8">
    <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger btn-sm' %>
   </div>
  </div>
</div>
