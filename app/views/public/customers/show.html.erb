<div class="container">
  <div class="row mt-5">
    <h5>登録情報</h5> <button type="button" class="btn btn-success btn-sm"><%= link_to "編集する", edit_customer_path(@customer.id), class: 'text-light' %></button>
  </div>
  <div class="row mt-3">
     <div class="col-6">
      <table class="table table-bordered">
        <tr><th class="table-active">氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td></tr>
        <tr><th class="table-active">カナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td></tr>
        <tr><th class="table-active">郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th class="table-active">住所</th><td><%= @customer.address %></td></tr>
        <tr><th class="table-active">電話番号</th><td><%= @customer.telephone_number %></td></tr>
        <tr><th class="table-active">メールアドレス</th><td><%= @customer.email %></td></tr>
      </table>
     </div>
  </div>
  <div class="row">
    <h5>配送先</h5><%= link_to "一覧を見る", addresses_path, class: 'btn btn-success btn-sm' %><br>
  </div>
  <div class="row">
    <h5>注文履歴</h5><%= link_to "一覧を見る", orders_path, class: 'btn btn-success btn-sm' %><br>
  </div>
</div>