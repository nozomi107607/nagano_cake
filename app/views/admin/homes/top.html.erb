<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-8">
      <table class="table table-hover table-inverse table-borderless">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), "admin/orders/#{order.id}", class: 'text-dark' %></td>

            <td><%= order.customer.last_name%><%= order.customer.first_name %></td>

            <td><%= order.order_details.sum(:amount) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>