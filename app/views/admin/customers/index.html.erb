<div class="container">
  <div class="row">
    <h4>会員一覧</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-hover table-inverse table-borderless">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
          　<th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
         <tr>
           <td><%= customer.id %></td>
           <td><%= link_to customer.last_name, "/admin/customers/#{customer.id}", class: 'text-dark' %><%= link_to customer.first_name, "/admin/customers/#{customer.id}", class: 'text-dark' %></td>
           <td><%= customer.email %></td>
           <td><%= customer.is_deleted_i18n %></td>
         </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

