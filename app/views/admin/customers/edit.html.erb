<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 well well-sm"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</div>
  </div>
  <div class="row justify-content-md-center">
   <div class="col-sm-8">
    <table class="table table-borderless">
     <%= form_with model:@customer, url: admin_customer_path(@customer.id),method: :patch do |f| %>
     <thead>
       <tr>
         <th>会員ID</th>
         <th><%= @customer.id %></th>
       </tr>
       <tr>
         <th>氏名</th>
         <th><%= f.text_field :last_name %></th>
         <th><%= f.text_field :first_name %></th>
       </tr>
       <tr>
         <th>フリガナ</th>
         <th><%= f.text_field :last_name_kana %></th>
         <th><%= f.text_field :first_name_kana %></th>
       </tr>
       <tr>
         <th>郵便番号</th>
         <th><%= f.text_field :postal_code %></th>
       </tr>
       <tr>
         <th>住所</th>
         <th><%= f.text_field :address %></th>
       </tr>
       <tr>
         <th>電話番号</th>
         <th><%= f.text_field :telephone_number %></th>
       </tr>
       <tr>
         <th>メールアドレス</th>
         <th><%= f.text_field :email %></th>
       </tr>
       <tr>
         <th>会員ステータス</th>
         <th><%= f.radio_button :is_deleted, "active" %>有効 <%= f.radio_button :is_deleted, "non_active" %>退会</th>
         <th></th>
       </tr>
       <tr>
         <th></th>
         <th><%= f.submit '変更を保存', class: 'btn btn-success' %></th>
       </tr>
      </thead>
      <% end %>
    </table>
   </div>
  </div>
</div>



