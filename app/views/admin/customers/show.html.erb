<div class="container">
  <div class="row">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.last_name %>  <%= @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th><%= @customer.is_deleted_i18n %></th>
          </tr>
        </thead>
      </table>
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>
