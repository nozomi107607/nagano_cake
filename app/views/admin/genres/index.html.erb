 <div class="container">
  <div class="row">
   <h4>ジャンル一覧・追加</h4>
  </div>
  <div class="row">
    <div class="col-2">
      <h6>ジャンル名</h6>
    </div>
    <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
    <div class="col">
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: 'btn btn-success btn-sm' %>
    </div>
    <% end %>
  </div>
  <div class="row">
   <div class="col-4">
    <table class="table table-hover table-inverse">
     <thead class="thead-light">
      <tr>
       <th></th>
       <th>ジャンル</th>
       <th colspan="2"></th>
      </tr>
     </thead>
     <tbody>
       <% @genres.each do |genre| %>
       <tr>
        <td></td>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id),  class: 'btn btn-success' %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>